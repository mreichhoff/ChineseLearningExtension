{
    "name": "Chinese Learning Extension",
    "version": "0.1",
    "manifest_version": 3,
    "description": "TODO",
    "background": {
        "service_worker": "background-built.js"
    },
    "permissions": [
        "activeTab",
        "sidePanel",
        "storage"
    ],
    "side_panel": {
        "default_path": "side-panel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-built.js"
            ],
            "css": [
                "css.css"
            ],
            "all_frames": true
        }
    ]
}